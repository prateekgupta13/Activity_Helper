<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%=link_to image_tag("rails.png", size: '25x25', id: "logo"), root_path%>
      <nav>
        <ul class="nav pull-right">
          <li>
            <form class="form-search">
            <input type="text" class="input-medium search-query" placeholder="Search">
            <i class="icon-search icon-white"></i>
            <!-- <button type="submit" class="btn">Search</button> -->
            </form>
          </li>
          <% if !current_user%>
          <li><%= link_to "Register", new_user_registration_path %></li>
          <li><%= link_to "Sign in", new_user_session_path %></li>
          <%else%>          
          <%count=current_user.inverse_messages.where(status:false).count%>
          <li><%=link_to "<span class='badge badge-important'>#{count}</span>Messages".html_safe,messages_path%></li>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to '<i class="icon-home"></i>Profile'.html_safe, current_user%></li>
              <li><%=link_to '<i class="icon-envelope"></i>Messages'.html_safe,messages_path%></li>
              <li><%=link_to '<i class="icon-user"></i>Find Friends'.html_safe,users_path %></li>
              <li><%=link_to '<i class="icon-wrench"></i>Settings'.html_safe,'#'%></li>
              <li class="divider"></li>
              <li><%=link_to '<i class="icon-ok"></i>  Logout'.html_safe, destroy_user_session_path%></li>      
            </ul>
          </li>
          
          <%end%>
        </ul>
  </div>
