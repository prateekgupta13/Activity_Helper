<div id="new">
  <% nures.each do |rahul| %>
    <div class="activities_partial">
      <section>
        <div>
          <span>
            <%=link_to (gravatar_for rahul.user), rahul.user %>
          </span>
          <span>
            <h6><%=rahul.user.username%></h6>
          </span>
        </div>
        <div class="span3 offset3">
          <span>
            Name: <%= rahul.name %>
          </span>
          <span>
            Category: <%= rahul.category %>
          </span>
        </div>
        <div>
          <span>
            Description:  <%= rahul.description %>
          </span>
          <span class="timestamp">
            Posted <%= time_ago_in_words(rahul.created_at) %> ago.
          </span>
        </div>
      </section>
      <% if signed_in?%>
        <div>
          <span>
            <%=link_to '<i class="icon-comment"></i> Comment?'.html_safe, "#", remote:true,class:"click-link"%>&nbsp;
            <%=link_to '<i class="icon-thumbs-up"></i>Like'.html_safe,'#', remote:true%>
          </span>
        </div>
      <%end%>
      <div class="whole-comment">
        <div class="row">
          <div class="abc">
            <%=render partial:'comments/new', locals:{activity:rahul, comment:@comment}%>
          </div>
        </div>
        <div>
          <span>
            <%=render partial: 'comments/comment', locals:{activity:rahul,comments:@comments}%>
          </span>
        </div>
      </div><hr>
   </div>
  <%end%>
</div>    