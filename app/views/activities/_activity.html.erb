<div id="new">
  <% nures.each do |rahul| %>
    <div class="activities_partial">
      <div class="span12">
        <div class="row">
      		<div span="3">
            <%=link_to (gravatar_for rahul.user), rahul.user %>
            <%=rahul.user.username%>  
      		</div>
          <div class="sapn3 offset3">
            <div class="row1">
              Name: <%= rahul.name %>
            </div>
            <div class="row2">
              Category: <%= rahul.category %>
            </div>
          </div>
          <div class="span3 offset6">
            Description:<%= rahul.description %><br>
          </div>
        </div>
        <div class="row">
          <%=link_to "Comment?", "#", remote:true,class:"click-link"%>
        </div>
        <div class="whole-comment">
          <div class="row">
            <%=render partial:'comments/new', locals:{activity:rahul, comment:@comment}%>
          </div>
        <div class="row">
          <%=render partial: 'comments/comment', locals:{activity:rahul,comments:@comments}%>
        </div>
      </div><hr>
    </div>
    </div>
  <%end%>
</div>